{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Keycloak Helm Chart Values",
  "type": "object",
  "properties": {
    "keycloak": {
      "type": "object",
      "properties": {
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string", "default": "jboss/keycloak" },
            "tag": { "type": "string", "default": "latest" },
            "pullPolicy": { "type": "string", "default": "IfNotPresent" }
          },
          "required": ["repository", "tag"]
        },
        "db": {
          "type": "object",
          "properties": {
            "vendor": { "type": "string", "default": "postgres" },
            "host": { "type": "string" },
            "port": { "type": "integer", "default": 5432 },
            "name": { "type": "string" },
            "username": { "type": "string" },
            "existingSecret": { "type": "string" },
            "existingSecretPasswordKey": { "type": "string", "default": "password" }
          },
          "required": ["host", "name", "username", "existingSecret"]
        },
        "auth": {
          "type": "object",
          "properties": {
            "adminUser": { "type": "string" },
            "adminPassword": { "type": "string" },
            "managementUser": { "type": "string" },
            "managementPassword": { "type": "string" }
          },
          "required": ["adminUser", "adminPassword", "managementUser", "managementPassword"]
        },
        "service": {
          "type": "object",
          "properties": {
            "type": { "type": "string", "default": "ClusterIP" },
            "httpPort": { "type": "integer", "default": 8080 },
            "httpsPort": { "type": "integer", "default": 8443 }
          }
        },
        "ingress": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "className": { "type": "string", "default": "" },
            "annotations": { "type": "object" },
            "hosts": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "host": { "type": "string" },
                  "paths": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "path": { "type": "string" },
                        "pathType": { "type": "string" }
                      },
                      "required": ["path"]
                    }
                  }
                },
                "required": ["host", "paths"]
              }
            },
            "tls": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "hosts": { "type": "array", "items": { "type": "string" } },
                  "secretName": { "type": "string" }
                },
                "required": ["secretName"]
              }
            }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "object",
              "properties": {
                "cpu": { "type": "string" },
                "memory": { "type": "string" }
              }
            },
            "limits": {
              "type": "object",
              "properties": {
                "cpu": { "type": "string" },
                "memory": { "type": "string" }
              }
            }
          }
        }
      },
      "required": ["image", "db", "auth", "service"]
    },
    "cnpg": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "cluster": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "name": { "type": "string" },
            "namespace": { "type": "string" },
            "instances": { "type": "integer", "minimum": 1, "default": 1 },
            "storage": {
              "type": "object",
              "properties": {
                "size": { "type": "string" },
                "storageClass": { "type": ["string", "null"] },
                "persistentVolumeReclaimPolicy": { "type": "string", "default": "Retain" }
              },
              "required": ["size"]
            },
            "resources": {
              "type": "object",
              "properties": {
                "requests": {
                  "type": "object",
                  "properties": {
                    "cpu": { "type": "string" },
                    "memory": { "type": "string" }
                  }
                },
                "limits": {
                  "type": "object",
                  "properties": {
                    "cpu": { "type": "string" },
                    "memory": { "type": "string" }
                  }
                }
              }
            }
          },
          "required": ["name", "namespace", "storage"]
        }
      }
    }
  },
  "required": ["keycloak"]
}
